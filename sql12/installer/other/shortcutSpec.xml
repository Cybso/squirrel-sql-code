<izpack:shortcuts version="5.0"
                  xmlns:izpack="http://izpack.org/schema/shortcuts"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">

   <programGroup defaultName="SQuirreL SQL Client" location="applications"/>
   <shortcut name="SQuirreL SQL Client"
             target="$INSTALL_PATH/squirrel-sql.bat"
             workingDirectory="$INSTALL_PATH"
             description="SQuirreL SQL Client"
             iconFile="$INSTALL_PATH/icons/acorn.ico"
             initialState="normal"
             programGroup="yes"
             desktop="yes"
             applications="no"
             startMenu="no"
             startup="no"
             encoding="UTF-8">
      <createForPack name="Base"/>
   </shortcut>
</izpack:shortcuts>


